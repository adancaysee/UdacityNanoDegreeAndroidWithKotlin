<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/animation_list_destination">

    <fragment
        android:id="@+id/animation_list_destination"
        android:name="com.udacity.motionlayout.AnimationListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_animation_list">
        <action
            android:id="@+id/action_step1"
            app:destination="@id/step1_destination" />
        <action
            android:id="@+id/action_step2"
            app:destination="@id/step2_destination" />
        <action
            android:id="@+id/action_step3"
            app:destination="@id/step3_destination" />
        <action
            android:id="@+id/action_animation_list_destination_to_step2_destination"
            app:destination="@id/step2_destination" />
        <action
            android:id="@+id/action_step4"
            app:destination="@id/step4_destination" />
        <action
            android:id="@+id/action_step5"
            app:destination="@id/step5_destination" />
    </fragment>
    <fragment
        android:id="@+id/step1_destination"
        android:name="com.udacity.motionlayout.Step1Fragment"
        android:label="@string/title_activity_step1"
        tools:layout="@layout/fragment_step1"/>
    <fragment
        android:id="@+id/step2_destination"
        android:name="com.udacity.motionlayout.Step2Fragment"
        android:label="@string/title_activity_step2"
        tools:layout="@layout/fragment_step2"/>
    <fragment
        android:id="@+id/step3_destination"
        android:name="com.udacity.motionlayout.Step3Fragment"
        android:label="@string/title_activity_step3"
        tools:layout="@layout/fragment_step3"/>
    <fragment
        android:id="@+id/step4_destination"
        android:name="com.udacity.motionlayout.Step4Fragment"
        android:label="@string/title_activity_step4"
        tools:layout="@layout/fragment_step4"/>
    <fragment
        android:id="@+id/step5_destination"
        android:name="com.udacity.motionlayout.Step5Fragment"
        android:label="@string/title_activity_step5"
        tools:layout="@layout/fragment_step5"/>
</navigation>